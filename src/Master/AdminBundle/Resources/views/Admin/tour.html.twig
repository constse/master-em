{% extends 'MasterAdminBundle::layout.html.twig' %}

{% block head_title %}Тур{% endblock %}

{% block body_content %}
    <div class="page-header"><h1>Тур</h1></div>
    {{ form_start(form) }}
        {% for field in form %}{{ form_row(field) }}{% endfor %}
        <button type="submit" class="btn btn-success">Сохранить</button>
    {{ form_end(form) }}
    <br><br>
    {% if tour is not empty %}<a href="{{ url('admin_tour_delete', {'tour': tour.id}) }}" class="btn btn-danger">Удалить тур</a>{% endif %}
{% endblock %}