{% extends 'MasterAdminBundle::layout.html.twig' %}

{% block head_title %}Вопрос-ответ{% endblock %}

{% block body_content %}
    <div class="page-header"><h1>Вопрос-ответ</h1></div>
    {{ form_start(form) }}
        {% for field in form %}{{ form_row(field) }}{% endfor %}
        <button type="submit" class="btn btn-success">Сохранить</button>
    {{ form_end(form) }}
    <br><br>
    {% if question is not empty %}<a href="{{ url('admin_question_delete', {'question': question.id}) }}" class="btn btn-danger">Удалить вопрос</a>{% endif %}
{% endblock %}