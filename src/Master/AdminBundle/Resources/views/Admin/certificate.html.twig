{% extends 'MasterAdminBundle::layout.html.twig' %}

{% block head_title %}Сертификат{% endblock %}

{% block body_content %}
    <div class="page-header"><h1>Сертификат</h1></div>
    {{ form_start(form) }}
    {% for field in form %}{{ form_row(field) }}{% endfor %}
    <button type="submit" class="btn btn-success">Сохранить</button>
    {{ form_end(form) }}
    <br><br>
    {% if cert is not empty %}<a href="{{ url('admin_certificate_delete', {'cert': cert.id}) }}" class="btn btn-danger">Удалить сертификат</a>{% endif %}
{% endblock %}