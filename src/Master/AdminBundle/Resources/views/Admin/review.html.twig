{% extends 'MasterAdminBundle::layout.html.twig' %}

{% block head_title %}Отзыв{% endblock %}

{% block body_content %}
    <div class="page-header"><h1>Отзыв</h1></div>
    {{ form_start(form) }}
    {% for field in form %}{{ form_row(field) }}{% endfor %}
    <button type="submit" class="btn btn-success">Сохранить</button>
    {{ form_end(form) }}
    <br><br>
    {% if review is not empty %}<a href="{{ url('admin_review_delete', {'review': review.id}) }}" class="btn btn-danger">Удалить отзыв</a>{% endif %}
{% endblock %}