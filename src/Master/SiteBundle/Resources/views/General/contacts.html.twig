                <!-- Certs -->
            </ul>
        </div>
        <div class="me-details">
            <h2>Реквизиты</h2>
            <table>
                <thead></thead>
                <tbody>
                    <tr>
                        <td class="me-details-left">
                            <strong>ООО &laquo;Интерстеллар&raquo;</strong><br>
                            ОГРН 9867457658764<br>
                            КПП 222101001 / ИНН 2221210680<br>
